<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="lovecraft">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="creature" maxOccurs="unbounded" minOccurs="1">
          <xs:complexType>
            <xs:sequence>
              <xs:element type="xs:string" name="nom"/>
              <xs:element type="xs:string" name="origine"/>
              <xs:element type="xs:string" name="image"/>
            </xs:sequence>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>
